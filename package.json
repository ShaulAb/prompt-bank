{
  "name": "prompt-bank",
  "displayName": "Prompt Bank",
  "description": "Save and manage your frequent prompts for AI assistants and development workflows",
  "version": "0.1.0",
  "publisher": "promptbank",
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "prompts",
    "snippets",
    "productivity",
    "ai",
    "templates"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptBank.savePrompt",
        "title": "Save Current Selection as Prompt",
        "category": "Prompt Bank"
      },
      {
        "command": "promptBank.insertPrompt",
        "title": "Insert Prompt",
        "category": "Prompt Bank"
      },
      {
        "command": "promptBank.listPrompts",
        "title": "List All Prompts",
        "category": "Prompt Bank"
      },
      {
        "command": "promptBank.deletePrompt",
        "title": "Delete Prompt",
        "category": "Prompt Bank"
      }
    ],
    "keybindings": [
      {
        "command": "promptBank.savePrompt",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorHasSelection"
      },
      {
        "command": "promptBank.insertPrompt",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ]
  },
  "activationEvents": [
    "onCommand:promptBank.savePrompt",
    "onCommand:promptBank.insertPrompt",
    "onCommand:promptBank.listPrompts",
    "onCommand:promptBank.deletePrompt"
  ],
  "scripts": {
    "dev": "nodemon --exec tsx src/extension.ts",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=node18 --minify",
    "build:watch": "npm run build -- --watch --sourcemap",
    "build:dev": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=node18 --sourcemap",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts",
    "format": "prettier --write src",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^1.1.0"
  }
}
