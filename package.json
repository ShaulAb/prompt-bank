{
  "name": "prompt-bank",
  "displayName": "Prompt Bank",
  "description": "Save and manage your frequent prompts for AI assistants and development workflows",
  "version": "0.1.0",
  "publisher": "promptbank",
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "prompts",
    "snippets",
    "productivity",
    "ai",
    "templates"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "promptBank.promptsView",
          "name": "Prompt Bank",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "promptBank.savePrompt",
        "title": "Save Current Selection as Prompt",
        "category": "Prompt Bank"
      },
      {
        "command": "promptBank.insertPrompt",
        "title": "Insert Prompt",
        "category": "Prompt Bank"
      },
      {
        "command": "promptBank.listPrompts",
        "title": "List All Prompts",
        "category": "Prompt Bank"
      },
      {
        "command": "promptBank.deletePrompt",
        "title": "Delete Prompt",
        "category": "Prompt Bank"
      },
      {
        "command": "promptBank.refreshTree",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "promptBank.insertPromptFromTree",
        "title": "Insert Prompt",
        "icon": "$(insert)"
      },
      {
        "command": "promptBank.searchPrompts",
        "title": "Search Prompts",
        "category": "Prompt Bank"
      },
      {
        "command": "promptBank.editPromptFromTree",
        "title": "Edit Prompt",
        "icon": "$(edit)"
      },
      {
        "command": "promptBank.copyPromptContent",
        "title": "Copy Content",
        "icon": "$(copy)"
      },
      {
        "command": "promptBank.deletePromptFromTree",
        "title": "Delete Prompt",
        "icon": "$(trash)"
      },
      {
        "command": "promptBank.renameCategory",
        "title": "Rename Category",
        "icon": "$(edit)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "promptBank.refreshTree",
          "when": "view == promptBank.promptsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "promptBank.insertPromptFromTree",
          "when": "view == promptBank.promptsView && viewItem == prompt",
          "group": "inline"
        },
        {
          "command": "promptBank.editPromptFromTree",
          "when": "view == promptBank.promptsView && viewItem == prompt",
          "group": "1_modification@1"
        },
        {
          "command": "promptBank.copyPromptContent",
          "when": "view == promptBank.promptsView && viewItem == prompt",
          "group": "1_modification@2"
        },
        {
          "command": "promptBank.deletePromptFromTree",
          "when": "view == promptBank.promptsView && viewItem == prompt",
          "group": "2_danger@1"
        },
        {
          "command": "promptBank.renameCategory",
          "when": "view == promptBank.promptsView && viewItem == category",
          "group": "1_modification@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "promptBank.savePrompt",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorHasSelection"
      },
      {
        "command": "promptBank.insertPrompt",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:promptBank.savePrompt",
    "onCommand:promptBank.insertPrompt",
    "onCommand:promptBank.listPrompts",
    "onCommand:promptBank.deletePrompt"
  ],
  "scripts": {
    "dev": "nodemon --exec tsx src/extension.ts",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=node18 --minify",
    "build:watch": "npm run build -- --watch --sourcemap",
    "build:dev": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=node18 --sourcemap",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts",
    "format": "prettier --write src",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^1.1.0"
  }
}
